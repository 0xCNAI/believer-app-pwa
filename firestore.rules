rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Market Insights - readable by all authenticated users
    match /market_insights/{category} {
      allow read: if request.auth != null;
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Users collection - users can read/write their own documents
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow read/write to subcollections
      match /{subcollection}/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // System metrics - readable by authenticated users
    match /system_metrics/{document=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    // Mail collection for email triggers (Firebase Extension)
    match /mail/{document=**} {
      allow create: if request.auth != null;
      allow read: if false;
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
